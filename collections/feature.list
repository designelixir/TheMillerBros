<script>console.log({@|json-pretty})</script>


<div class="portfolio-item-window fade-in" id="portfolio-{id}">
    <span class="portfolio-nav linear-gradient">
        <span><h1> {title} </h1></span>
        <span class="hover-indication" style="min-width: 100px;">
            <button id="toggle-fullscreen-{id}"> EXPAND </button>
           <button class="circle-button-blue" id="toggle-close-{id}"> <h3>X</h3> </button>
        </span>
    </span>
    <span> <h4 style="color: white; padding: 0px 25px;">Here is a potential spot for a short sentence if you'd like it. </h4>


<div style="padding:56.25% 0 0 0;position:relative;">
<iframe id="portfolio-iframe-{id}" src="https://player.vimeo.com/video/457595632?h=155f54ce15&autoplay=1&title=0&byline=0&portrait=0" style="position:absolute;top:0;left:0;width:100%;height:100%;" frameborder="0" allow="autoplay; fullscreen; picture-in-picture" allowfullscreen></iframe></div>
      

    <button class="fadeOver">hi </button>
    


</div>

  <div id="post-{id}" class="portfolio-item {@|item-classes}" data-item-id="{id}">
  
    <div class="portfolio-item-title" style="background-image: url('{structuredContent.oembed.thumbnailUrl}?format=original'); ">
        <h3 class="title" data-content-field="title">{title}</h3>
        <button class="post-{id}" class="portfolio-item-play fade-in">PLAY</button>
    </div>
  </div>

    <script> 

    $( "#toggle-fullscreen-{id}" ).click (function(){
    $( "#portfolio-iframe-{id}" )[0].src= 'https://player.vimeo.com/video/'+ '433465561?h=88909a821c' + '&autoplay=1&title=0&byline=0&portrait=0';
    requestFullscreen($( "#portfolio-iframe-{id}" )[0]);

    });

    function requestFullscreen(el){
        if (el.requestFullscreen) {
                el.requestFullscreen();
            } else if (el.msRequestFullscreen) {
                el.msRequestFullscreen();
            } else if (el.mozRequestFullScreen) {
                el.mozRequestFullScreen();
            } else if (el.webkitRequestFullscreen) {
                el.webkitRequestFullscreen();
            }
        }

    $('#post-{id}').bind('click', function(){
        $('#portfolio-{id}').css('display', 'block');
        $('#portfolio-{id}.iframe').attr("src", oembed.url)
    })

    $('#toggle-close-{id}').bind('click', function(){
      console.log("ya fycj");
      $('#portfolio-{id}').css('display', 'none');
    })


    $('#toggle-close-project').click(function(){
        $('.project-case-study-window').css("display", "none")
    })

    $('#toggle-open-project').click(function(){
        console.log('clicky')
        $('.project-case-study-window').css("display", "block")
    })
    </script>

