<div class="portfolio-grid">
{.repeated section items}
  <div id="post-{id}" class="portfolio-item {@|item-classes}" data-item-id="{id}" style="background-image: url('{fullURL}?format=original'); background-repeat: no-repeat;">
    <div class="portfolio-item-title">
        <h3 class="title" data-content-field="title">{title}</h3>
        <button id="post-{id}" class="portfolio-item-play fade-in">PLAY</button>

        

    </div>
  </div>

    <script> 
    $('#post-{id}.portfolio-item-play').bind('click', function(){
        $('.portfolio-item-window').css('display', 'block');
        $('.portfolio-item-window-title').text('{title}');


    })
    </script>

{.or}

<p>no videos.</p>

{.end}
</div>