<script>

function mediaQuery(x) {
  if (x.matches) { 
    document.body.style.backgroundColor = "black";
    $('.about-summary-image').css("background-size", "300%", "height", "60%");
    $('.about-summary-text-wrapper').css("width", "100%");
    $('#project-details').css("display", "inline-block");
    $('#project-details-left').css("width", "100%");
    $('#project-details-right').css("width", "100%", "padding-top", "25px");
    $('#project-case-study-window-nav h4').css("font-size","14px")

  } else {
    document.body.style.backgroundColor = "white";
     $('.about-summary-image').css("background-size", "cover", "height", "80%") 
     $('.about-summary-text-wrapper').css("width", "60%");
     $('#project-details').css("display", "inline-flex");
    $('#project-details-left').css("width", "60%");
    $('#project-details-right').css("width", "35%", "padding-top", "0");
  }
}

var x = window.matchMedia("(max-width: 550px)")
mediaQuery(x) 
x.addListener(mediaQuery) 

$('#toggle-close-project').click(function(){
    $('.project-case-study-window').css("display", "none")
})

</script>