{#  container for videos  }
<section style="height: calc(95vh - 100px);">
{.repeated section items}
    <div class="project" >
        {#  background vimeo  }
        <div class="vimeo-wrapper" style="background-image: url('{fullURL}?format=original');">
            <iframe id="backgroundiframe" src="https://player.vimeo.com/video/612955052?background=1&autoplay=1&loop=1&byline=0&title=0"
            frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
        </div>

        <div class="project-navigation">
            <span class="project-toggle">
                <button class="toggle" id="FUCK"> left </button>
                <button class="toggle"> right </button>
            </span>
        </div>
        <div class="project-navigation linear-gradient">
           <span class="project-title hover-indication" id="toggle-open-project">
                <h1>{title}</h1>
                <h4>{customContent.brand}</h4> 
            </span>
            <span class="project-counter">
                FFFFF
            </span>
        </div>
    </div>

    {#  FULL CASE STUDY  }

<div class="project-case-study-window fade-in" style="display: none;">
    <div class="project-case-study-window-nav fade-in" id="toggle-close-project">
        <span>
            <img style="height: 100%; width: auto;" src="../assets/miller-bros-lettermark.svg"/>
        </span>

        <span class="hover-indication" >
            <span><h4 style="font-size: 14px; text-align: right;">Back to <br> Homepage</h4></span>
            <span style="width: 75px"> <button class="circle-button-blue"> <h3>X</h3> </button></span>
        </span>
    </div>

    <div class="project-case-study-wrapper" >
        <div class="case-study-iframe">
            <iframe src="" id="casestudy-iframe" width="978" height="550" frameborder="0" allow="autoplay; fullscreen; picture-in-picture" allowfullscreen></iframe>
        </div>

        <div class="project-case-study-info">
            
            <span id="project-text" class="box-shadow">
                <span id="project-summary" class="fade-in">
                    <h1 class="project-title">{title}</h1>
                    <h5>{customContent.shortdescription}</h5>
                </span>
                <span id="project-details" class="fade-in">
                    <span id="project-details-left">
                        <h4>Project Summary </h4>
                        
                        <p>{body}</p>
                        <br>
                        <span id="testimonial">
                            <span><h1>"</h1></span>
                            <p>{customContent.testimonial}</p>
                            <span><h1>"</h1></span>
                        </span>
                    </span>

                    <span id="project-details-right">
                    <h4> Credits </h4>

                    </span>
                </span>

                <span id="project-bts">
                    <span class='bts-img' style="background-image: url('{fullURL}?format=original');"></span>
                    <span class='bts-img' style="background-image: url('{fullURL}?format=original');"></span>
                    <span class='bts-img' style="background-image: url('{fullURL}?format=original');"></span>
                    <span class='bts-img' style="background-image: url('{fullURL}?format=original');"></span>

                </span>

            <span>
        </div>
    </div>
    
</div>

{.end}
</section>

