
<script src="../scripts/project.js"></script>
<div id="featured-project-slider radial-gradient" >
    <div id="featured-project-wrapper">


{.repeated section items}

{#  SLIDE ---------------------------------------------------  }

    <div class="project" data-item-id="{id}">
        <div class="vimeo-wrapper slide-in-right" style="background-image: url('{structuredContent.oembed.thumbnailUrl}?format=original');" >
            <iframe class="backgroundiframe" src='https://player.vimeo.com/video/{customContent.vimeocode}?background=1&autoplay=1&loop=1&byline=0&title=0' frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
        </div>


{#  LINKED SLIDERS  }

        {.equal? customContent.customType "LinkedSlider"} 
            <span class="linked-slider-title slide-in-right" style="10px solid teal;">
                <a href='{customContent.clickthru}' style="text-decoration: none; "><span id="linked-slider-wrapper"  style="width: 70%;">
                    <h1 class="link-title">{title}</h1>
                    <h4 style="color: white; margin-left: 39px;">{body}</h4> 
                </span></a>
            </span>
        {.or}
       
{#  CASE STUDY SLIDERS}

        <span style="height: 25%;"></span>
        <span class="summary-title toggle-case-study slide-in-right">
            <span id="summary-title-button-wrapper">

                <span id="title-brand-wrapper"  style="width: 90%;">
                    <h1 class="project-title">{title}</h1>
                    <h4 style="color: white; margin-left: 39px;">{customContent.brand}</h4> 
                </span>
                <span class="case-study-toggle-arrow">
                    <span class="case-study-toggle-arrow-wrapper">
                        <img style="padding-left: 10px; width: 50%;"src="../assets/arrow.svg"/>
                    </span>                            
                </span>
            </span>                    
        </span>
        {.end}
    </div>

  
{#  start of case study window   }
<div class="case-study-window fade-in" style="display: none" >
    <div class="case-study-wrapper fade-in" style="display: none">
        {#  case study navigation  }
        <div class="case-study-nav inset-box-shadow">
            <span>               
                <img src="../assets/miller-bros-lettermark.svg" alt="Miller Bros Lettermark Logo" />
            </span>
            <span style="justify-content: flex-end;">
                <button id="toggle-fullscreen-{id}" class="expand-button hover-indication " aria-label="Toggle Full Screen Video Window"></button>
                <button class="circle-button-blue hover-indication toggle-case-study" aria-label="Close Portfolio Video Window"></button>
            </span>
        </div>
        {#  full cut iframe  }
        <div class="fullcut-iframe-container" style="background-image: url('{structuredContent.oembed.thumbnailUrl}?format=original');">
            <div class="fullcut-iframe-wrapper" style="padding:56.25% 0 0 0; position:relative; overflow-y: hidden; ">
                <iframe id="fullcut-iframe" class="case-study-iframe" src="https://player.vimeo.com/video/{customContent.vimeocode-iframe}?h=5d02ec9719&title=0&byline=0&portrait=0" style="position:absolute;top:0;left:0;width:100%; height: 100%;  overflow-y: hidden; max-width: 1700px; max-height: 950px;" frameborder="0" allow="autoplay; fullscreen; picture-in-picture" allowfullscreen></iframe>
            </div>
        </div>

        {#  project details  }
        <div class="case-study-title inset-box-shadow case-study-block">
            <h1>{title}</h1>
            <h5>{customContent.shortdescription}</h5>
        </div>

        <div class="case-study-text texture">
            <span class="case-study-block" id="summary-credits-wrapper">
                <span class="case-study-summary">
                    <h4>Project Summary </h4>   
                    <span class="yellow-line"></span>
                    <p>{body}</p>
                </span>
                <span class="case-study-credits">
                    <h4> Credits </h4>
                    <span class="yellow-line"></span>
                    <span>{customContent.credits.html}</span>
                </span>
            </span>

            {#  TESTIMONIAL  }
            <span class="case-study-text-block">
                <span class="case-study-testimonial">
                    {.if customContent.testimonial}
                        <span id="testimonial">
                            <p>{customContent.testimonial}</p>
                        </span>
                        <h5>-{customContent.testimonial-name}</h5>
                    {.or}
                    
                    {.end}
                </span>
            </span>

            <span class="case-study-text-block">
                <span>
                    {.if customContent.additional-video1}
                    <h4>Additional Videos </h4>
                    <span class="yellow-line"></span>
                    <br>
                        <div class="extra-video">
                        <div style="padding:56.25% 0 0 0;position:relative;">
                            <iframe class="additional-video-iframe-one" src="https://player.vimeo.com/video/{customContent.additional-video1}?h=a80429b32e&title=0&byline=0&portrait=0" style="position:absolute;top:0;left:0;width:100%;height:100%;" frameborder="0" allow="autoplay; fullscreen; picture-in-picture" allowfullscreen></iframe></div><script src="https://player.vimeo.com/api/player.js"></script>
                        </div>
                    {.or}
                    {.end}
                    {.if customContent.additional-video2}
                        <div class="extra-video">
                        <div style="padding:56.25% 0 0 0;position:relative;">
                            <iframe class="additional-video-iframe-two" src="https://player.vimeo.com/video/{customContent.additional-video2}?h=a80429b32e&title=0&byline=0&portrait=0" style="position:absolute;top:0;left:0;width:100%;height:100%;" frameborder="0" allow="autoplay; fullscreen; picture-in-picture" allowfullscreen></iframe></div><script src="https://player.vimeo.com/api/player.js"></script>
                        </div>
                    {.or}
                    {.end}

                </span>
            </span>
        </div>

        <div id="bts" class="case-study-block inset-box-shadow fade-into-view-animation">
            <h6> Behind the Scenes </h6>
            <div id="bts-photos-grid" >
                {.repeated section customContent.behindthescenes}
                    <img class="bts-img" src="{assetUrl}" data-image-resolution="250w"/>
                {.end}
            </div>
                <span style="display: flex; align-items: center; justify-content: center; padding: 50px; color: white;">
                    <span>
                        <h4 class="hover-indication back-to-top" > BACK TO TOP </h4>
                        <button class="circle-button-blue hover-indication toggle-case-study" style="width: 100%;" aria-label="Close Portfolio Video Window"></button>
                    </span>
                </span>
        </div> 

    </div>
</div>
{#  end of case study window  }




{#  PROJECT END ---------------------------------------------------  }
{.end}
        
    </div>
</div>
<span id="project-counter">
    <img src="../assets/tan-textured-circle.svg" class="counter">
</span>

<div id="next-slide">
    <img src="../assets/nav-arrow.svg" />
</div>

<section class="texture inset-box-shadow" style="background: #241E1F; width: 100vw!important;   ">

    <span style="background: #241E1F; display: flex; align-items: center; justify-content: center; width: 100%;"> <img src="../assets/nav-arrow.svg" style="transform: rotate(90deg); width: 10px; "/> </span>
    <div class="about">
        <div class="about-header">
            <h6 style="font-size: 48px;"> Telling stories from the  </h6>
            <h6 style="padding-left: 10%; font-size: 72px; margin-top: -25px;">road less traveled </h6>
            <span style="margin-left: 10%; margin-top: -10px; z-index: 3;" class="yellow-line"></span>
        </div>
            <squarespace:block-field id="about-photo" columns="12"/>
            


        
    </div>

</section>



