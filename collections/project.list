<script>
{#  populating arrays is done - now fill pages   }




{#  when you click toggle bar go to next thing  }
$('#toggle-bar').click(function(){
    console.log("slide counter: " + slideCounter + "this is a project: " + $('.project').eq(slideCounter));
    $('#portfolio-{id}.project').css('display', 'none');
})


function mediaQuery(x) {
  if (x.matches) { 
    $('.about-text-bg').css("width", "97.5%");
    $('#project-details').css("display", "inline-block");
    $('#project-details-left').css("width", "100%");
    $('#project-details-right').css("width", "100%", "padding-top", "25px");
    $('#project-case-study-window-nav h4').css("font-size","14px")

  } else {
    $('.about-text-bg').css("width", "70%");
    $('#project-details').css("display", "inline-flex");
    $('#project-details-left').css("width", "60%");
    $('#project-details-right').css("width", "35%", "padding-top", "0");
  }
}

var x = window.matchMedia("(max-width: 550px)")
mediaQuery(x) 
x.addListener(mediaQuery) 

{#  opens FULL case study window  }
$('#open-case-study').click(function(){
    $('.project-case-study-window').css("display", "block")
})

$('#exit-case-study').click(function(){
    $('.project-case-study-window').delay(3000).css("display", "none");
});

{#  make an animated something for this hover to encourage people to click  }
$("#summary-title span").hover(function(){
  $(".project-arrow").css("background-color", "yellow");
});





</script>