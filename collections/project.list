
<div class="homepage-wrapper">

<!-- item loop -->
{.repeated section items}
<script>

console.log({@|json-pretty})
console.log("da code is " + {customContent.vimeocode})

{#  generates background video  }
var vimeoIframe = 'https://player.vimeo.com/video/';
var vimeoCode = {customContent.vimeocode};
var vimeoAutoplay = '?autoplay=1&loop=1&background=1';

document.getElementById('backgroundiframe').src = vimeoIframe + vimeoCode + vimeoAutoplay;

</script>



<div class="featured-wrapper">
    <div class="slide-video" >

        <div class='embed-container' id="post-{id}" class="portfolio-item {@|item-classes}" data-item-id="{id}" style="background-image: url('{fullURL}?format=original'); background-repeat: no-repeat;">
            <iframe id="backgroundiframe" src="" frameborder='0' webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe> 
        </div>

    </div>

    <div class="featured-info">
        <h1>{title}</h1>
    </div>

</div>
    

{.or}

  <!-- no items -->
  <p><em>No blog posts yet.</em></p>

{.end}


</div>
<script src="https://player.vimeo.com/api/player.js"></script>
