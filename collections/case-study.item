


{.section item}
<div class="case-study-window texture" style="overflow-y: scroll!important;">
    <div class="project-case-study-wrapper">
    <div class="project-top-wrapper" style="background-image: url('{structuredContent.oembed.thumbnailUrl}?format=original');">
        {#  iframe  }
        <div class='embed-container' >
            <iframe class="fade-in" src='https://player.vimeo.com/video/{customContent.vimeocode}?h=5d02ec9719&title=0&byline=0&portrait=0' frameborder='0' webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe>
        </div>
    </div>
        <div id="titlelogo">
            <div style="width: 90%;">
                <h1 class="yellow-text-shadow fade-in">{title}</h1>
            </div>
        
            {.if customContent.brandlogo}
            <div id="brand-logo" class="drop-shadow">
            {.if customContent.brandurl}
                <a href="{customContent.brandurl}" target="_blank" class="hoverthis"><img src="{customContent.brandlogo.assetUrl}?format=250" style="width: 75%; max-width: 150px;"/></a>
                {.or}<span style="display: flex; align-items: center; justify-content: center; height: 125px; width: 125px;"><img src="{customContent.brandlogo.assetUrl}?format=250" style="max-height: 100px; max-width: 100px; margin-left: 25px; margin-top: 25px;"/></span>{.end}
            </div>
            {.end}
            
        </div>
        {.if body}
        <div class="case-study-section fade-in tan-texture">
            <div id="summary" class="padding-control">
                <p>{body}</p>
                {.if customContent.testimonial}
                    <div id="review" style="padding-top: 50px;">
                        <h1>"</h1> <span>
                            <p style="font-size: 36px; line-height: 48px; margin-top: 10px;" id="testimonial">{customContent.testimonial}</p>
                            <h5>-{customContent.testimonialname}</h5>
                        </span> <h1>"</h1>
                    </div>
                {.end}
            </div>
             {.if customContent.credits.html}
            <div id="credits" class="texture inset-box-shadow">
                
                <div class="padding-control">
                    <h6 style="font-size: 36px; font-weight: 700;">Credits </h6>
                    <img src="../assets/shapes/yellow-textured-line.svg"/>
                    <p>{customContent.credits.html}</p>
                </div>
                {.end}
                {.if customContent.additionalvideo1}
                <div style="padding: 25px 50px 50px 25px; width: 100%;">
                        <h6 style="font-size: 36px; font-weight: 700;">Additional Videos </h6>
                        <img src="../assets/shapes/yellow-textured-line.svg" style="max-width: 500px;" alt="decorative line"/>
                    
                            <div class='embed-container' style="margin: 25px 0 0 0">
                                <iframe class="fade-in" src='https://player.vimeo.com/video/{customContent.additionalvideo1}?h=5d02ec9719&title=0&byline=0&portrait=0' frameborder='0' webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe>
                            </div>
                        
                        {.if customContent.additionalvideo2}
                            <div class='embed-container' style="margin: 25px 0 0 0;" >
                                <iframe class="fade-in" src='https://player.vimeo.com/video/{customContent.additionalvideo2}?h=5d02ec9719&title=0&byline=0&portrait=0' frameborder='0' webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe>
                            </div>  
                        {.end}
                    </div>
                    
                </div>
                {.end}
                
                
            </div>
        </div>
        {.end}

        
        
        

        
                
        
        {#  BEHIND THE SCENES  }
        {.if customContent.behindthescenes}
        <div id="bts" class="texture" style="text-align: center; padding-bottom: 50px;">
            <span style="width: 50%;">
                <h6 style="font-size: 48px; font-weight: 700; padding: 25px;"> Behind the Scenes </h6>
                <img src="../assets/shapes/yellow-textured-line-center.svg" style="max-width: 500px; min-width: 200px; margin-bottom: 25px;"/>
            </span>

            <div id="bts-photos-grid">
                {.repeated section customContent.behindthescenes}
                    <img class="bts-img drop-shadow" src="{assetUrl}?format=750"/>
                {.end}
            </div>
        </div> 
        {.end}
    </div>
    
</div>

{.end}

