<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <link rel="stylesheet" href="https://use.typekit.net/ctq0biw.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    {squarespace-headers}
  </head>
  <body id="{squarespace.page-id}" class="{squarespace.page-classes} texture" style="width: 100vw;">
      <header class="site-header" id="contact-header" >
        <squarespace:navigation navigationId="siteNav" template="site-navigation" />
      </header>
      <div class="site-header-image-container" id="contact-header-image" style="background-image: url('{collection.mainImage.assetUrl}')"><span style="height: 100%; height: 40vh; width: 100%;"></span></div>
      
      <div class="contact-floating-container">
        <div class="contact-floating-container-left">
            <div class="contact-floating-container-left-half" id="top-half"  >
                <span id="half-1">
                  <h6 id="contact-title-1"> Let's tell a </h6><h6 id="contact-title-2"> story together</h6>
                  <img class="drop-shadow" src="assets/shapes/yellow-textured-line.svg"/>
                </span>
            </div>
            <div class="contact-floating-container-left-half">
            <div style="margin: 25px 0">
                <squarespace:block-field id="contact-title" class="bold-paragraph" columns="1"/>
                <squarespace:block-field id="contact-form" columns="1" />
              </div>
            </div>
        </div>
        {#  CARD SIDE  }
        <div class="contact-floating-container-right" >
            <div id="contact-card-holder">
              <div class="contact-card tan-texture">
                <div class="contact-card-wrapper">

                  <div class="contact-card-column" style="border-right: 4px solid #62abd0; border-radius: 2px; width: 90%;">
                    <span style="text-align: center;">
                        <h4 style="font-size: 18px;">Spencer &amp; Camden Miller </h4>
                        <h5 style="font-size: 18px; padding-top: 5px;"><a id="email-link" style="color: black; font-weight: 300;" href="mailto:stories@themillerbros.com">stories@themillerbros.com</a> </h5>
                        <div class="social-navigation-footer">
                            <a href="https://vimeo.com/themillerbros" target="_blank" id="vimeo-f-a"><img class="social-icon " id="vimeo-f" src="../assets/social/vimeo-black.svg" alt="vimeo icon"/></a>
                            <a href="https://www.instagram.com/miller.bros/" target="_blank" id="insta-f-a"><img class="social-icon " id="insta-f" src="../assets/social/instagram-black.svg" alt="instagram icon"/></a>
                            <a href="mailto:stories@themillerbros.com" target="_blank" id="email-f-a"><img class="social-icon " id="email-f" src="../assets/social/email-black.svg" alt="email icon"/></a>
                        </div>
                    </span>
                  </div>
                  <div class="contact-card-column">
                    <img src="assets/messy-icon.svg" style="width: 100%; padding: 25px;"/>
                  </div>


                </div>
              </div>
            </div>
            <div id="map-holder">
              <span style="text-align: center; padding-bottom: 25px;">
                <img id="map-img" src="../assets/map.svg" style="width: 100%;"/>
                <p id="map-holder-address" class="bold-paragraph white-text" >3 S. Black Avenue,<br> Bozeman, MT</p>
                </span>
            </div>
        </div>
      </div>

      <!-- cms content injection point -->
      <main class="content-container" id="contact-page-main-content" role="main" data-content-field="main-content" >
        

       {squarespace.main-content}
      </main>

    

    <!-- combo and minify scripts when not logged in -->
    <squarespace:script src="site.js" combo="{.if authenticatedAccount}false{.or}true{.end}" />

    <!-- other scripts, and footer code injection -->
    {squarespace-footers}

  </body>
  <squarespace:navigation navigationId="footerNav" template="footer" />


</html>


