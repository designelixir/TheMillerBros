<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <link rel="stylesheet" href="https://use.typekit.net/ctq0biw.css">
    <link rel="stylesheet" href="styles/our-story.less">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    {squarespace-headers}
  </head>
  <body id="{squarespace.page-id}" class="{squarespace.page-classes} texture">

    
      <header class="site-header">
        <squarespace:navigation navigationId="siteNav" template="site-navigation" />
      </header>

      <div style="width: 100%; height: 60vh; min-height: 400px; border: 2px solid magenta; background-image: url(assets/18.jpg); background-size: cover; background-position: center center; background-repeat: no-repeat;">
  {#  header photo  }
      </div>
      <div style="width: 100%; height: 40vh; border: 4px solid aqua; margin-top: -20vh; display: flex; align-items: flex-end; justify-content: center;  ">
        <h6 style="text-align: center; color: white; font-size: 3rem;"> Telling stories from the path less traveled.</h6>
      </div>


    <div class="section">
        <div id="review-wrapper">
            <h1>&rdquo;</h1>
            <squarespace:block-field id="our-story-review" columns="1"/>
            <h1>&rdquo;</h1>
        </div>
        <div id="review-name-wrapper">
          <span style='width: 100px; height: 100px;'><squarespace:block-field id="our-story-review-img" columns="1"/></span>
          <span style="padding: 25px 0 0 10px;">
            <squarespace:block-field id="our-story-reviewer" columns="1"/>
            <squarespace:block-field id="our-story-reviewer-company" columns="1"/>
          </span>
        </div>
      </div>
    

      <div class="bio-container">
        {.repeated section items}
        <script>console.log({@|json-pretty})</script>
        {.if starred}
        <div class="bio-wrapper inset-box-shadow" style="background-image: url({assetUrl}?format=original); ">
            <div class="bio-content-wrapper">
                <span class="bio-content drop-shadow">
                  {body}
                  <img class="signature-img" src="{customContent.signature.assetUrl}"/>
                </span>
            </div>
        </div>
        {.or}
        {.end}
        {.end}
        </div>

        <div class="inset-box-shadow" style="width: 100%; padding: 100px 50px;">
            <squarespace:block-field id="team-description" columns="1" lock-layout="true"/>
        </div>

        <div class="our-story-gallery">
            <squarespace:block-field id="our-story-gallery" columns="12"/>
        </div>

      <div class="extended-family">
          <span>
            <img style="min-width: 300px; width: 100%; max-width: 500px" src="assets/lab-logo-white.svg"/>
          </span>
          
          <span>
          <h6 style="text-align: center; color: white; font-size: 3rem;"> Our Extended Family</h6>
          <squarespace:block-field id="extended-family-text" columns="1"/>
          </span>

          
      </div>
      <div class="extended-family-grid">
          {.repeated section items}
           {.if starred}
            {.or}
            <div class="bio-wrapper family-bio inset-box-shadow" id="bio-{id}" style="background-image: url({assetUrl}?format=original); background-position-x: {mediaFocalPoint.x}!important; background-position-y: {mediaFocalPoint.y}!important ">
                <div style="width: 100%; height: 100%; border: 2px solid yellow; display: flex; align-items: flex-end;">
                <div>
                <script>console.log({mediaFocalPoint.x} +","+ {mediaFocalPoint.y})</script>
                   <div class="family-bio-text drop-shadow gradient-shadow">
                      <h6>{title}</h6>
                      <h2>{customContent.jobtitle}</h2>
                    
                      <div id="family-bio-description" style="color: white; display: none;">
                          {body}
                          <span style="display: inline-flex;">
                          {.if customContent.instagram}
                            <a href="https://www.instagram.com/{customContent.instagram}/" target="_blank"><img class="social-icon" src="assets/social/instagram.svg"/></a>
                          {.end}
                          {.if customContent.instagram}
                            <a href="{customContent.websiteurl}" target="_blank"><img class="social-icon" src="assets/social/globe.svg"/></a>
                          {.end}
                          </span>
                      </div>
                    </div>
                </div>
                </div>
               
            </div>
            {.end}


          {.end}


          </div>


                    <span>
                      <span class="hover-family-bio">
                          {body}
                      </span>
                    <span>

      <main class="content-container" id="our-story-content" role="main" data-content-field="main-content" >
       {squarespace.main-content}
      </main>
    

    <!-- combo and minify scripts when not logged in -->
    <squarespace:script src="site.js" combo="{.if authenticatedAccount}false{.or}true{.end}" />
    <!-- other scripts, and footer code injection -->
    {squarespace-footers}

  </body>
</html>

