<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <link rel="stylesheet" href="https://use.typekit.net/ctq0biw.css">
    <link rel="stylesheet" href="styles/our-story.less">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    {squarespace-headers}
  </head>
  <body id="{squarespace.page-id}" class="{squarespace.page-classes} texture" style="width: 100vw; overflow-x: hidden!important; ">

    
      <header class="site-header gradient-shadow">
        <squarespace:navigation navigationId="siteNav" template="site-navigation" />
      </header>

      <div style="width: 100%; height: 60vh; min-height: 400px; background-image: url('{collection.mainImage.assetUrl}'); background-size: cover; background-position: center center; background-repeat: no-repeat;">
  {#  header photo  }
      </div>
      {#  <div style="width: 100%; height: 40vh; margin-top: -20vh; display: flex; align-items: flex-end; justify-content: center;  "></div>  }


      <div class="padding-control" id="intro-review" style="width: 100%; overflow-x: hidden;" >
        <div id="review-wrapper">
            <h1>&rdquo;</h1>
            <squarespace:block-field id="our-story-review" columns="1"/>
            <h1>&rdquo;</h1>
        </div>
        <div id="review-name-wrapper">
          <div style='width: 125px; height: 125px;'><squarespace:block-field id="our-story-review-img" columns="1"/></div>
          <span style="padding: 25px 0 0 10px;">
            <squarespace:block-field id="our-story-reviewer" columns="1"/>
            <squarespace:block-field id="our-story-reviewer-company" columns="1"/>
          </span>
        </div>
      </div>
    

      <div class="bio-container" >
        {.repeated section items}
        {.if starred}
        <div class="bio-wrapper inset-box-shadow" style="background-image: url({assetUrl}?format=original); ">
            <div class="bio-content-wrapper">
                <span class="bio-content drop-shadow">
                  {body}
                  <img class="signature-img" src="{customContent.signature.assetUrl}"/>
                </span>
            </div>
        </div>
        
        {.end}
        {.end}
        </div>

        <div class="inset-box-shadow texture" style="width: 100%; padding: 200px 50px 100px 50px; ">
            <squarespace:block-field id="team-description" class="bold-paragraph" columns="1"/>
        </div>

        <div class="our-story-gallery texture">
            <squarespace:block-field id="our-story-gallery" columns="12"/>
        </div>

      <div class="extended-family-intro inset-border-box texture" style="padding-top: 50px;">
        <div class="padding-control">
            <squarespace:block-field id="extended-family-title" class="yellow-text-shadow" columns="1"/>
            <img src="assets/shapes/yellow-textured-line-center.svg" style="margin-bottom: 25px;"/>
            <squarespace:block-field id="extended-family-text" class="bold-paragraph" columns="1"/>
          </div>
      </div>

     
      <div class="family">
      <div class="bio-grid-button drop-shadow2"  id="stuff-left" onclick='biosLeft(true)' style="transform: rotate(180deg); left: 0;"><img class="hoverthis" src="../assets/nav-arrow.svg"/></div>
      <div class="bio-grid-button drop-shadow2" id="stuff-right" onclick='biosRight(true)' style="margin-left: calc(100% - 30px);"> <img class="hoverthis" src="../assets/nav-arrow.svg" style="max-width: 40px;"/></div>
      

      <div id="bio-container">
          
        {.repeated section items}{.if starred}{.or}
            <div class="family-bio-wrapper inset-box-shadow" onclick="clickBio()" style="background-image: url({assetUrl}?format=750);">
                <div class="family-bio" style=" height: 100%; width: 100%; background: linear-gradient(0deg, rgba(0,0,0,0.15730042016806722) 0%, rgba(0,0,0,0) 72%, rgba(0,0,0,0) 100%);">
                <div class="family-bio-text drop-shadow gradient-shadow" style="width: 100%;" onclick="clickBio()">
                <div class="family-bio-description fade-in"style="color: white; display: none;">
                  <div style="padding: 35px; height: 100%; width: 100%; display: flex; align-items: center; justify-content: center;" >
                      <div style="text-align: center;">
                        
                        {body}
                        <span style="display: inline-flex; width: 100%; align-items: center; justify-content: center; padding-top: 15px;">
                        {.if customContent.instagram}
                          <a href="https://www.instagram.com/{customContent.instagram}/" target="_blank"><img class="social-icon" src="assets/social/instagram.svg"/></a>
                        {.end}
                        {.if customContent.instagram}
                          <a href="{customContent.websiteurl}" target="_blank"><img class="social-icon" src="assets/social/globe.svg"/></a>
                        {.end}
                        </span>
                      </div>
                    </div>
                </div>
                  <div id="holder" style="display: none">
                    <div class="livenow">
                        <div></div><div></div><div></div><div></div>
                    </div>
                  </div>
                <div class="family-bio-title fade-in" style=" width: 100%; height: 50%;  display: flex; align-items: flex-end; justify-content: center;">
                  
                  <div style="margin-bottom: 15px; text-align: center; width: 100%;  ">
                  
                    <h6 style="margin:15px 25px">{title}</h6>
                    <h2 style="padding: 0px 25px 25px 25px">{customContent.jobtitle}</h2>
                  </div>
                </div>
              </div>
              
              </div>
            </div>
            {.end}
          {.end}
  
    
    
    </div>

    
    </div>



      <main class="content-container texture" id="our-story-content" role="main" data-content-field="main-content" >
       {squarespace.main-content}
      </main>
    
      <squarespace:navigation navigationId="footerNav" template="footer" />


    <!-- combo and minify scripts when not logged in -->
    <squarespace:script src="site.js" combo="{.if authenticatedAccount}false{.or}true{.end}" />
    <!-- other scripts, and footer code injection -->
    {squarespace-footers}

  </body>
  
</html>
<script>
$('.family-bio div').hover(
    function(){
    $(this).css({"backdrop-filter":"blur(4px)"})
    $('.family-bio-description', this).css({"display":"block"});
    $('.family-bio-title', this).css({"display":"none"})
    
}, function(){
    $(this).css({"backdrop-filter":"blur(0px)"})
    $('.family-bio-description', this).css({"display":"none"});
    $('.family-bio-title', this).css({"display":"inline-flex"})
})

var count = 0;
function clickBio(){
  count++;
  clearInterval(autoTimerBios)
  if ((count % 2) != 0) {
     $(this).css({"backdrop-filter":"blur(4px)"})
    $('.family-bio-description', this).css({"display":"block"});
    $('.family-bio-title', this).css({"display":"none"})
  } else {
   $(this).css({"backdrop-filter":"blur(0px)"})
    $('.family-bio-description', this).css({"display":"none"});
    $('.family-bio-title', this).css({"display":"block"})
  }
}


var bios = document.getElementsByClassName('family-bio-wrapper');

function biosRight(cancelTimer){
    var measurediv = bios[1].getBoundingClientRect();
    var biocontainer = document.getElementById('bio-container')
    biocontainer.scrollLeft += measurediv.width ;
    if(cancelTimer){
      clearInterval(autoTimerBios)
    }
}

function biosLeft(canceltimer){
  var measurediv = bios[1].getBoundingClientRect(); 
  var divwidth = measurediv.width * biosnum 
  var biocontainer = document.getElementById('bio-container')
  biocontainer.scrollLeft -= measurediv.width ;
  if(cancelTimer){
      clearInterval(autoTimerBios)
    }
}


if (mobileDevice) {
  $('#holder').css("display","block");
}

var autoTimerBios = setInterval(biosRight, 4000);

</script>


