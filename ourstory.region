<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <link rel="stylesheet" href="https://use.typekit.net/ctq0biw.css">
    <link rel="stylesheet" href="styles/our-story.less">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    {squarespace-headers}
  </head>
  <body id="{squarespace.page-id}" class="{squarespace.page-classes} texture" style="left: 0; overflow-x: hidden; width: 100vw;">

    
      <header class="site-header gradient-shadow">
        <squarespace:navigation navigationId="siteNav" template="site-navigation" />
      </header>

      <div style="width: 100%; height: 60vh; min-height: 400px; background-image: url('{collection.mainImage.assetUrl}'); background-size: cover; background-position: center center; background-repeat: no-repeat;">
  {#  header photo  }
      </div>
      <div style="width: 100%; height: 40vh; margin-top: -20vh; display: flex; align-items: flex-end; justify-content: center;  ">
        {#  header-illustration  }
      </div>


      <div class="padding-control" id="intro-review" >
      <h1 class="blue-text-shadow"><squarespace:block-field id="our-story-page-title" columns="1"/></h1> 
        <div id="review-wrapper">
            <h1>&rdquo;</h1>
            <squarespace:block-field id="our-story-review" columns="1"/>
            <h1>&rdquo;</h1>
        </div>
        <div id="review-name-wrapper">
          <span style='width: 100px; height: 100px;'><squarespace:block-field id="our-story-review-img" columns="1"/></span>
          <span style="padding: 25px 0 0 10px;">
            <squarespace:block-field id="our-story-reviewer" columns="1"/>
            <squarespace:block-field id="our-story-reviewer-company" columns="1"/>
          </span>
        </div>
      </div>
    

      <div class="bio-container">
        {.repeated section items}
        {.if starred}
        <div class="bio-wrapper inset-box-shadow" style="background-image: url({assetUrl}?format=original); ">
            <div class="bio-content-wrapper">
                <span class="bio-content drop-shadow">
                  {body}
                  <img class="signature-img" src="{customContent.signature.assetUrl}"/>
                </span>
            </div>
        </div>
        
        {.end}
        {.end}
        </div>

        <div class="inset-box-shadow texture" style="width: 100%; padding: 200px 50px 100px 50px; ">
            <squarespace:block-field id="team-description" class="bold-paragraph" columns="1"/>
        </div>

        <div class="our-story-gallery texture">
            <squarespace:block-field id="our-story-gallery" columns="12"/>
        </div>

      <div class="extended-family-intro inset-border-box texture" style="display: flex; justify-content: right; overflow: hidden; width: 100vw;">
      <span class="padding-control">
          <h1 class="yellow-text-shadow" style="text-align: center;"> Our Extended Family</h1>
          <img src="assets/shapes/yellow-textured-line-center.svg" style="margin-bottom: 25px;"/>
          <squarespace:block-field id="extended-family-text" class="bold-paragraph" columns="1"/>
          </span>
      </div>

     
      <div style="width: 100vw; height: 650px; display: inline-flex; align-items: center; justify-content: flex-start;">
      <div style="width: 50px; border: 2px solid teal; position: absolute; left: 0; height: 39vh;" id="stuff-left">
          <img src="../assets/textured-strip.png" style="height: 100%; width: 100%; transform: rotate(180deg)"/>
      </div>
      <div id="bio-container" style="width: 96vw; margin: 0 2vw; height: 600px; overflow-x: scroll!important; overflow-y: hidden; border: 2px solid yellow; display: flex; ">
          
        {.repeated section items}{.if starred}{.or}
            <div class=" inset-box-shadow" id="bio-{id}" style="min-height: 400px; margin: 2px; min-width: 350px; background-size: cover; background-image: url({assetUrl}?format=750); background-position: center center ">
                
                <div  style=" height: 100%; width: 100%; background: linear-gradient(0deg, rgba(0,0,0,0.15730042016806722) 0%, rgba(0,0,0,0) 72%, rgba(0,0,0,0) 100%);">
                <div class="family-bio-text drop-shadow gradient-shadow" style="width: 100%;">
                <div class="family-bio-description fade-in" style="color: white; display: none;">
                  <div style="padding: 25px; height: 100%; width: 100%; display: flex; align-items: center; justify-content: center;">
                      <span style="text-align: center;">
                  
                        {body}
                        <span style="display: inline-flex; width: 100%; align-items: center; justify-content: center; padding-top: 15px;">
                        {.if customContent.instagram}
                          <a href="https://www.instagram.com/{customContent.instagram}/" target="_blank"><img class="social-icon" src="assets/social/instagram.svg"/></a>
                        {.end}
                        {.if customContent.instagram}
                          <a href="{customContent.websiteurl}" target="_blank"><img class="social-icon" src="assets/social/globe.svg"/></a>
                        {.end}
                        </span>
                      </span>
                    </div>
                </div>
                <div class="family-bio-title fade-in" style=" width: 100%; height: 50%;  display: flex; align-items: flex-end; justify-content: center;">
                  <span style="margin-bottom: 15px; text-align: center; width: 100%;  ">
                    <h6 style="margin:15px 25px">{title}</h6>
                    <h2 style="padding: 0px 25px 25px 25px">{customContent.jobtitle}</h2>
                  </span>
                </div>
              </div>
              
              </div>
            </div>
            {.end}
          {.end}
  
    
    
    </div>
    <div style="width: 50px; border: 2px solid teal; position: absolute; right: 0; height: 39vh;" id="stuff-right">
        <img src="../assets/textured-strip.png" style="height: 100%; width: 100%; "/>
    </div>
    </div>



      <main class="content-container texture" id="our-story-content" role="main" data-content-field="main-content" >
       {squarespace.main-content}
      </main>
    
      <squarespace:navigation navigationId="footerNav" template="footer" />


    <!-- combo and minify scripts when not logged in -->
    <squarespace:script src="site.js" combo="{.if authenticatedAccount}false{.or}true{.end}" />
    <!-- other scripts, and footer code injection -->
    {squarespace-footers}

  </body>
  
</html>
<script>
$('.family-bio div').hover(
    function(){
    $(this).css({"backdrop-filter":"blur(4px)"})
    $('.family-bio-description', this).css({"display":"block"});
    $('.family-bio-title', this).css({"display":"none"})
    
}, function(){
    $(this).css({"backdrop-filter":"blur(0px)"})
    $('.family-bio-description', this).css({"display":"none"});
    $('.family-bio-title', this).css({"display":"block"})
})

$('.family-bio div').click(function(){
  var count = $(this).data("count") || 0;
  $(this).data("count", ++count);
  if ((count % 2) != 0) {
     $(this).css({"backdrop-filter":"blur(4px)"})
    $('.family-bio-description', this).css({"display":"block"});
    $('.family-bio-title', this).css({"display":"none"})
  } else {
   $(this).css({"backdrop-filter":"blur(0px)"})
    $('.family-bio-description', this).css({"display":"none"});
    $('.family-bio-title', this).css({"display":"block"})
  }
})


$('#stuff-right').click(function(){
    console.log("going right")
    document.getElementById('bio-container').scrollLeft += 600;

})


$('#stuff-left').click(function(){
    document.getElementById('bio-container').scrollLeft -= 600;
})

</script>


